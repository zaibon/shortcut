package components

templ URLList(urls []string) {
	<ul id="links">
		for _, item := range urls {
			<li>
				@ShortURL(item)
			</li>
		}
	</ul>
}

templ ShortURL(url string) {
	<a href={ templ.URL(url) } target="_blank" rel="noopener noreferrer" class="text-base font-normal text-blue-600 hover:underline">{ url }</a>
}

templ AddedURL(url string) {
	<div id="links" hx-swap-oob="afterbegin">
		<li>
			@ShortURL(url)
		</li>
	</div>
}
